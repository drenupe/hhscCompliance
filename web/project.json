{
  "name": "web",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "web/src",
  "tags": ["type:app", "surface:web"],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/web",
        "browser": "web/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "web/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "web/public",
            "output": "."
          }
        ],
        "styles": ["web/src/styles.scss"]
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        },
        "staging": {
          "outputHashing": "all",
          "optimization": true,
          "extractLicenses": true,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "web/src/environments/environment.ts",
              "with": "web/src/environments/environment.staging.ts"
            }
          ],
          "budgets": [
            { "type": "initial", "maximumWarning": "500kb", "maximumError": "1mb" },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "25kb",
              "maximumError": "50kb"
            }
          ]
        },
        "production": {
          "outputHashing": "all",
          "optimization": true,
          "extractLicenses": true,
          "sourceMap": false,
          "budgets": [
            { "type": "initial", "maximumWarning": "500kb", "maximumError": "1mb" },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "25kb",
              "maximumError": "50kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "web/src/environments/environment.ts",
              "with": "web/src/environments/environment.prod.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "development"
    },

    "serve": {
      "executor": "@angular/build:dev-server",
      "configurations": {
        "development": {
          "buildTarget": "web:build:development",
          "proxyConfig": "web/proxy.conf.json",
          "host": "localhost",
          "port": 4200,
          "open": true
        },
        "staging": {
          "buildTarget": "web:build:staging",
          "proxyConfig": "web/proxy.conf.json",
          "host": "localhost",
          "port": 4200,
          "open": true
        },
        "production": {
          "buildTarget": "web:build:production",
          "port": 4200
        }
      },
      "defaultConfiguration": "development"
    },

    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "web:build"
      }
    },

    "lint": {
      "executor": "@nx/eslint:lint"
    },

    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../coverage/web"
      }
    },

    "serve-static": {
      "executor": "@nx/web:file-server",
      "continuous": true,
      "options": {
        "buildTarget": "web:build:production",
        "port": 4300,
        "spa": true,
        "staticFilePath": "dist/web"
      }
    }
  }
}
