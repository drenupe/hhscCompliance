{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hhsc-compliance/behaviors": [
        "packages/features/behaviors/src/index.ts"
      ],
      "@hhsc-compliance/compliance-data-access": [
        "packages/compliance/compliance-data-access/src/index.ts"
      ],
      "@hhsc-compliance/compliance-registry": [
        "packages/compliance/compliance-registry/src/index.ts"
      ],
      "@hhsc-compliance/compliance-ui": [
        "packages/compliance/compliance-ui/src/index.ts"
      ],
      "@hhsc-compliance/consumers": [
        "packages/features/consumers/src/index.ts"
      ],
      "@hhsc-compliance/dashboard": [
        "packages/features/dashboard/src/index.ts"
      ],
      "@hhsc-compliance/data-access": ["packages/api/src/index.ts"],
      "@hhsc-compliance/iis": ["packages/features/iis/src/index.ts"],
      "@hhsc-compliance/medicals": ["packages/features/medicals/src/index.ts"],
      "@hhsc-compliance/models": ["packages/compliance/models/src/index.ts"],
      "@hhsc-compliance/residents": ["packages/residents/src/index.ts"],
      "@hhsc-compliance/shared-utils": [
        "packages/features/shared/src/index.ts"
      ],
      "@hhsc-compliance/staff": ["packages/features/staff/src/index.ts"],
      "@hhsc-compliance/training": ["packages/features/training/src/index.ts"],
      "@hhsc-compliance/ui-components": ["packages/frontend/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
